.navbar-wrapper
  .navbar.navbar-inverse
    .navbar-inner
      %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "#"} OpenCV
      .nav-collapse.collapse.pull-right
        %ul.nav
          - if current_user
            %li= link_to 'Sign-out', destroy_user_session_path, method: :delete
          - else
            %li
              = link_to 'Sign-in', "#login-form",  :'data-toggle' => :modal
            %li
              = link_to 'Sign-up', "#signup-form", 'data-toggle' => "modal"
#login-form.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "Sign-in", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3#signIn Sign in
  .modal-body
    = render :file => 'devise/sessions/new'
  .modal-footer
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
#signup-form.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "Sign-up", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3#signup Sign-up
  .modal-body
    = render :file => 'devise/registrations/new'
  .modal-footer
