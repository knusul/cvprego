= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote => true) do |f|
  .login-header
  .form-group.clearfix
    = f.label :email, :class => 'control-label col-md-4'
    .col-md-8
      = f.email_field :email, :autofocus => true, :class => "form-control"
  .form-group.clearfix
    = f.label :password, :class => "control-label col-md-4"
    .col-md-8
      = f.password_field :password, :class => "col-md-4 form-control"
  - if devise_mapping.rememberable?
    .form-group.clearfix
      = f.label :remember_me, :class => "control-label col-md-4"
      = f.check_box :remember_me
  .form-group.clearfix
    .col-md-offset-4.col-md-8
      = f.submit "Sign in", class: "btn btn-primary"
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    .form-group.clearfix
      .col-md-offset-4.col-md-8
        = link_to "Forgot your password?", new_password_path(resource_name)
