= form_for(resource, :class => "form-horizontal", :as => resource_name, :url => registration_path(resource_name), remote: true) do |f|
  .login-header
  = devise_error_messages!
  .form-group.clearfix
    = f.label :email, :class => 'control-label col-md-4'
    .col-md-8
      = f.email_field :email, :autofocus => true, :class => 'form-control'
  .form-group.clearfix
    = f.label :password, :class => 'control-label col-md-4'
    .col-md-8
      = f.password_field :password, :class => "form-control"
  .form-group.clearfix
    = f.label :password_confirmation, :class => "control-label col-md-4"
    .col-md-8
      = f.password_field :password_confirmation, :class => 'form-control'
  .form-group.clearfix
    .col-md-offset-4.col-md-8
      = f.submit "Sign up", class: 'btn btn-primary'
