<div class= "modal-dialog">
  <div class= "modal-content" >
    <div class="modal-header">
      <div class="button close btn-dismiss" {{action cancel content}}>x</div>
      <h2 class="app-icon-large">Post</h2>
    </div>
    <div class="modal-body">
      <form {{action save on="submit"}} class="form-horizontal">
        {{partial "education_edit_fields"}}
      </form>
    </div>
    <div class="modal-footer">
      <a class="btn btn-dark" href="javascript;:" {{action cancel content}}>Cancel</a>
      <button class="btn btn-success" type="submit" {{action save content}}>Save</button>
      <a class="btn btn-danger" {{action destroyRecord}}>Remove</a>
    </div>
  </div>
</div>
