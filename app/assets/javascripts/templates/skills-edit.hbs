<div class="modal-header">
  <div class="button close btn-dismiss" {{action cancel content}}>x</div>
  <h2 class="app-icon-large">Post</h2>
</div>
<div class="modal-body">
<div class="span7">

  {{view Ember.TextField id="new-todo" placeholder="What needs to be done?"
         valueBinding="newName" action="createTodo"}}
         <a class="btn" {{action createTodo}}><i class="icon-plus-sign"></i> Add a contact type </a>

  <form {{action save on="submit"}} class="form-horizontal">
    <legend>Key Skills</legend>

    <div class="control-group">
      <label class="control-label" for="description">Add new skill</label>
      <div class="controls">
        {{#each controller}}
            {{view Ember.TextField valueBinding="name" placeholder="diving, driving ect"}}
            <a class="btn" {{action removeSkill this}}><i class="icon-minus-sign"></i> Remove</a>
        {{/each}}
        <a class="btn" {{action addSkill}}><i class="icon-plus-sign"></i> Add a contact type </a>
      </div>
    </div>

  </form>
</div>

</div>
<div class="modal-footer">
  <a class="btn btn-dark" href="javascript;:" {{action cancel content}}>Cancel</a>
  <button class="btn btn-success" type="submit" {{action save content}}>Save</button>
</div>
