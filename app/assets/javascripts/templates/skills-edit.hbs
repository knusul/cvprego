<div class="modal-header">
  <div class="button close btn-dismiss" {{action ok}}>x</div>
  <h3 class="app-icon-large">Edit your key skills</h3>
</div>
<div class="modal-body">
<div class="span12">
  <form {{action save on="submit"}} class="form-horizontal">

    <div class="control-group">
      <label class="control-label" for="description">Add new skill</label>
      <div class="controls">

        <div class="control-group">
          {{view ember.textfield  placeholder="enter key skill?"
             valuebinding="newname" action="createskill"}}
             <a class="btn" {{action createskill}}><i class="icon-plus-sign"></i> add a contact type </a>
           </div>

        {{#each controller}}
            <div class='spacing'>
            {{view ember.textfield valuebinding="name" placeholder="diving, driving ect"}}
            <a  {{action removeskill this}}><i class="icon-remove icon-red"></i></a>
          </div>
        {{/each}}
      </div>
    </div>

  </form>
</div>

</div>
<div class="modal-footer">
  <button class="btn btn-success" type="submit" {{action ok}}>OK</button>
</div>
