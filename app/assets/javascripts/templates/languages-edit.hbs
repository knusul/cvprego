<div class="modal-header">
  <div class="button close btn-dismiss" {{action cancel content}}>x</div>
  <h2 class="app-icon-large">Languages</h2>
</div>
<div class="modal-body">
<div class="span7">
  <form {{action save on="submit"}} class="form-horizontal">
    <legend>Languages</legend>

    <div class="control-group">
      <label class="control-label" for="description">Add new language</label>
      <div class="controls">
        {{#each controller}}
            {{view Ember.TextField valueBinding="name" placeholder="english, german"}}
            {{view Ember.TextField valueBinding="level" placeholder="intermediate"}}
            <a class="btn" {{action removeLanguage this}}><i class="icon-minus-sign"></i> Remove</a>
        {{/each}}
        <a class="btn" {{action addLanguage}}><i class="icon-plus-sign"></i> Add a contact type </a>
      </div>
    </div>

  </form>
</div>

</div>
<div class="modal-footer">
  <a class="btn btn-dark" href="javascript;:" {{action cancel content}}>Cancel</a>
  <button class="btn btn-success" type="submit" {{action save content}}>Save</button>
</div>
