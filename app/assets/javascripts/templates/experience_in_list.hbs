{{#if controllers.application.clickable }}
{{#view App.FocusView object=experience }}
<div class='col-md-3 clickable'>
  <p>
  {{ experience.dateRange }}
  </p>
</div>
<div class='col-md-9'>
  {{#if experience.companyName}}
  <strong>
    {{ experience.companyName }}
  </strong>
  {{/if}}
  {{#if experience.role}}
  <strong>
    {{ experience.role }}
  </strong>
  {{/if}}
  {{ experience.description }}
</div>
{{/view}}
{{else}}
<div class='col-md-3'>
  {{experience.dateRange}}
</div>
<div class='col-md-9'>
  {{experience.fullname}}
  {{#if experience.companyName}}
  <strong>
    {{ experience.companyName }}
  </strong>
  {{/if}}
  {{#if experience.role}}
  <string>
  {{ experience.role }}
  </string>
  {{/if}}
  {{ experience.description }}
</div>
{{/if}}
