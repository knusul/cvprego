<div class='modal-dialog'>
  <div class="modal-content">
    <div class="modal-header">
      <div class="button close btn-dismiss" {{action ok}}>x</div>
      <h3 class="app-icon-large">Edit your key hobbies</h3>
    </div>
    <div class="modal-body">
      <form {{action ok on="submit"}} class="col-md-offset-4 form-horizontal">
        {{#each controller}}
        <div class='spacing'></div>
        <div class="form-group">
          {{view Ember.TextField class='col-md-4 form-control' valueBinding="name" placeholder="diving, driving ect"}}
          <a  {{action removeHobby this}}><i class="icon-remove red icon-red"></i></a>
        </div>
        {{/each}}

        <label class="control-label new-item" for="description">Add new hobby</label>
        <div class="form-group">
          {{view Ember.TextField class = 'col-md-4 form-control' id="new-hobby" placeholder="Enter your hobbies."
          valueBinding="newName" action="createHobby"}}
          <a class="btn" {{action createHobby}}><i class="icon-plus-sign"></i> Add a contact type </a>
        </div>
      </form>

    </div>
    <div class="modal-footer">
      <button class="btn btn-success" type="submit" {{action ok}}>OK</button>
    </div>
  </div>
</div>
